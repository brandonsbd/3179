{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": {
    "text": "Total Number of Flights from Australia's Major Airports (2020-2024)",
    "anchor": "start", 
    "fontSize": 24,
    "font": "Merriweather",
    "fontWeight": "bold",
    "color": "#333"
  },
  "projection": {
    "type": "mercator",
    "scale": 900, 
    "center": [135, -25]  
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brandonsbd/3179/refs/heads/main/js/Australia.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgoldenrodyellow",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brandonsbd/3179/refs/heads/main/data/da_otp_map_agg.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "strokeOpacity": 0.7
      },
      "encoding": {
        "longitude": {"field": "Departing_Longitude", "type": "quantitative"},
        "latitude": {"field": "Departing_Latitude", "type": "quantitative"},
        "longitude2": {"field": "Arriving_Longitude"},
        "latitude2": {"field": "Arriving_Latitude"},
        "color": {
          "field": "Total_Flights",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "Departing_Port", "type": "nominal", "title": "From"},
          {"field": "Arriving_Port", "type": "nominal", "title": "To"},
          {"field": "Total_Flights", "type": "quantitative", "title": "Total Flights"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "latitude": -37.81, 
            "longitude": 120, 
            "text": "156,998 Flights from Sydney-Melbourne route"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,  
        "dy": 5,  
        "fontSize": 14,
        "color": "#333"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"}
      }
    }
  ]
}
